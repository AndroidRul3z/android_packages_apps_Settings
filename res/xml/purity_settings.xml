<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/purity_settings_title" >

         <!-- Expanded Desktop -->
         <Preference
            android:key="button_settings"
            android:fragment="com.android.settings.purity.ButtonSettings"
            android:title="@string/buttonsettings_title" />

         <!-- Expanded Desktop -->
         <Preference
            android:key="expanded_desktop"
            android:fragment="com.android.settings.purity.ExpandedDesktop"
            android:title="@string/expanded_desktop_category" />

         <!-- Quick Settings -->
         <Preference
            android:id="@+id/quick_settings"
            android:title="@string/quicksettings_title"
            android:fragment="com.android.settings.purity.QuickSettings" />

</PreferenceScreen>
